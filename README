This is a demo project on esp32-c3-luat with air101-lcd.

## config

modify .h file

build_flags = 
	-D ST7735_DRIVER=1
	-D TFT_WIDTH=80
	-D TFT_HEIGHT=160
	-D ST7735_GREENTAB160x80=1
	-D TFT_INVERSION_OFF=1
	-D TFT_MOSI=3
	-D TFT_SCLK=2
	-D TFT_CS=7
	-D TFT_DC=6
	-D TFT_RST=10
	-D LOAD_GLCD=1
	-D LOAD_FONT2=1
	-D LOAD_FONT4=1
	-D LOAD_FONT6=1
	-D LOAD_FONT7=1
	-D LOAD_FONT8=1
	-D LOAD_GFXFF=1
	-D SMOOTH_FONT=1
	-D SPI_FREQUENCY=27000000
	-D SPI_READ_FREQUENCY=27000000
	-D LV_USE_DEMO_BENCHMARK=1
	-D LV_USE_DEMO_MUSIC=0
	-D LV_COLOR_16_SWAP=1
	-D LV_MEM_SIZE=(64U * 1024U)
	-D LV_TICK_CUSTOM=1
	-D LV_USE_LOG=1